ata) {<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; gzread(fp, gz_context-&gt;data, gz_context-&gt;length);<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;} else {<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; free(gz_context);<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; gz_context = NULL;<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;}<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;gzclose(fp);<br />&nbsp; &nbsp; &nbsp; } else {<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;free(gz_context);<br />&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;gz_context = NULL;<br />&nbsp; &nbsp; &nbsp; }<br />&nbsp; &nbsp;}<br />&nbsp; &nbsp;return gz_context;<br />}<br /><br />/*<br />// Close the file<br />*/<br />void gzCloseFile(gzFILE_T *fp)<br />{<br />&nbsp; &nbsp;if(fp) {<br />&nbsp; &nbsp; &nbsp; free(fp-&gt;data);<br />&nbsp; &nbsp; &nbsp; free(fp);<br />&nbsp; &nbsp;}<br />}<br />//eof</div>

		

